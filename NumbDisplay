// import that scanner 

import java.util.Scanner;


// The class. 

public class NumDisplay {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		System.out.print(" Enter a number between 0 and 9:");
		
		
		
		int number = sc.nextInt();
		
		// use switch to show each case scanerio. 
		switch(number) {
		
		case 0: System.out.println("zero.");break;

		case 1: System.out.println("one.");break;

		case 2: System.out.println("two.");break;

		case 3: System.out.println("three.");break;
		
		case 4: System.out.println("four.");break;
		
		case 5: System.out.println("five.");break;
		
		case 6: System.out.println("six.");break;
		
		case 7: System.out.println("seven.");break;
		
		case 8: System.out.println("eight.");break;
		
		case 9: System.out.println("nine.");break;
		
		default:
		
		// if you enter numbers higher than 0 through 9 that program will display this. 
		
		System.out.println(" You Enter the Wrong number ");
		
		}

	}

}
